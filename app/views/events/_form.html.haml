= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :start_year
    = f.number_field :start_year
  .field
    = f.label :end_year
    = f.number_field :end_year
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :source
    = f.text_field :source
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :published
    = f.check_box :published
  .actions
    = f.submit 'Save'
