= form_for @location do |f|
  - if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :abbr
    = f.text_field :abbr
  .field
    = f.label :top
    = f.number_field :top
  .field
    = f.label :left
    = f.number_field :left
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :location
    = f.text_field :location, :placeholder => 'lat,long'
  .actions
    = f.submit 'Save'
